<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/colorPrimaryDark"
        tools:layout_editor_absoluteY="81dp"
        android:backgroundTint="@color/fondo">

    <ImageView
            android:layout_width="392dp"
            android:layout_height="147dp"
            app:srcCompat="@drawable/thebest_wines"
            android:id="@+id/imageView3"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="vinos"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditText"
            android:hint="Correo"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/passwordEditText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.468"
            android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:hint="ContraseÃ±a"
            app:layout_constraintStart_toStartOf="@+id/registrarButton"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/emailEditText"
            android:autofillHints=""/>
    <Button
            android:text="registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registrarButton"
            android:background="@drawable/button"
            android:onClick="registrarUsuario"
            android:textColor="@color/fondo"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:ignore="MissingConstraints,OnClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            tools:layout_editor_absoluteY="358dp"/>
    <Button
            android:text="entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:background="@drawable/button"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="loginUsuario"
            tools:ignore="OnClick"
            android:layout_marginTop="37dp"
            android:textColor="@color/fondo"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
            app:layout_constraintEnd_toEndOf="@+id/passwordEditText"/>

</android.support.constraint.ConstraintLayout>